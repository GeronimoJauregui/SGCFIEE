@model SGCFIEE.Models.Articulos;
@{
    ViewData["Title"] = "CrearArticulos";
    Layout = "~/Views/Home/Principal.cshtml";
    var acad = (IEnumerable<Academicos>)ViewData["academicos"];
    var lugar = (IEnumerable<TipoLocNacInter>)ViewData["lugar"];
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>ARTÍCULOS</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form asp-controller="AcademicosPublicaciones" asp-action="ActualizarArticulos" method="post" enctype="multipart/form-data"> 
                        <div class="row">
                            <div class="col-md-6 col-md-6">
                                <input type="hidden" asp-for="IdArticulos"/>
                                <div class="form-group">
                                    <label>Académico</label>
                                    <select asp-for="IdAcademico" class="form-control">
                                        @foreach (var item in acad)
                                        {
                                            @if (item.IdAcademicos != Model.IdAcademico)
                                            {
                                                <option value="@item.IdAcademicos">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno)</option>
                                            }
                                            else
                                            {
                                                <option selected value="@item.IdAcademicos">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno)</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Tipo</label>
                                    <select asp-for="IdTipoNI" class="form-control">
                                        @foreach (var item in lugar)
                                        {
                                            @if (item.IdTipo != Model.IdTipoNI)
                                            {
                                                <option value="@item.IdTipo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                            else
                                            {
                                                <option selected value="@item.IdTipo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Nombre del artículo</label>
                                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresar..." required="required" value="@Model.Nombre">
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    Registrada:<br>
                                    <input asp-for="Registro" type="radio" value="1" if (Model.Registro == 1) {checked } /> Si<br>
                                    <input asp-for="Registro" type="radio" value="0" if (Model.Registro == 0) {checked } /> No
                                </div>
                                <div class="form-group">
                                    Arbitrada:<br>
                                    <input asp-for="Arbitrada" type="radio" value="1" if (Model.Arbitrada == 1) {checked } /> Si<br>
                                    <input asp-for="Arbitrada" type="radio" value="0" if (Model.Arbitrada == 0) {checked }/> No
                                </div>
                                <div class="form-group">
                                    <label>Actualizar evidencia:  @Model.Archivo</label><br>
                                    <input type="file" class="default" id="archivo" name="file">
                                </div>
                                <br>
                                <button type="submit" class="btn btn-success btn-sm m-b-10" name="Guardar" style="float:right">
                                    Guardar
                                </button>
                                <a asp-controller="AcademicosPublicaciones" asp-action="IndexArticulos" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>
