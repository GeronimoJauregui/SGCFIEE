@model SGCFIEE.Models.ReportesTecnicos;
@{
    ViewData["Title"] = "CrearReportes";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>REPORTE TÉCNICO</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form asp-controller="AcademicosPublicaciones" asp-action="ActualizarReportes" method="post" enctype="multipart/form-data"> 
                        <div class="row">
                            <div class="col-md-6 col-md-6">
                                <input type="hidden" asp-for="IdReportesTecnicos"/>
                                
                                <div class="form-group">
                                    <label>Nombre del reporte tecnico</label>
                                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresar..." required="required" value="@Model.Nombre">
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    <br>
                                    <input asp-for="LugarEmpresaSector" type="radio" value="1"/> Empresa<br>
                                    <input asp-for="LugarEmpresaSector" type="radio" value="0"/> Sector beneficiado
                                </div>
                                <div class="form-group">
                                    <label>Actualizar evidencia:  @Model.Archivo</label><br>
                                    <input type="file" class="default" id="archivo" name="file">
                                </div>
                                <br>
                                <button type="submit" class="btn btn-success btn-sm m-b-10" name="Guardar" style="float:right">
                                    Guardar
                                </button>
                                <a asp-controller="AcademicosPublicaciones" asp-action="IndexReportesTecnicos" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>
