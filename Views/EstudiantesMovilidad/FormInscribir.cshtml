@model SGCFIEE.Models.FormInscribirMovilidad;
@{
    Layout = "~/Views/Home/Principal.cshtml";
    var x = (int)ViewData["clv"];
    var y = (IEnumerable<ProgramaEducativo>)ViewData["Programas"];
}

<!DOCTYPE html>

<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="white-box">
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Registrar alumno en movilidad</a></li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="card-body " id="bar-parent2">
                                        <!-- text input -->
                                        <form asp-action="MostrarListaAlumnos" asp-antiforgery="true">
                                            <div class="card-body " id="bar-parent2">
                                                <div class="row">
                                                    <input type="hidden" asp-for="idMovilidad" value="@x" />
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label asp-for="idAlumno">Seleccione la carrera</label>
                                                            <select asp-for="idAlumno" class="form-control">
                                                                @foreach (var item in y)
                                                                {
                                                                    <option value="@item.IdProgramaEducativo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                                                }
                                                            </select> 
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-sm m-b-10" id="guardarmovi">
                                                Cargar alumnos
                                            </button>
                                        </form>
                                        <a id="cancelarEdicion" asp-controller="EstudiantesMovilidad" asp-action="Index" class="btn btn-default btn-sm m-b-10">
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

