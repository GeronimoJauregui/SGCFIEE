@model SGCFIEE.Models.TipoEventos
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/Principal.cshtml";
    var y = (IEnumerable<TipoEventos>)ViewData["tipos"];
    var x = (IEnumerable<TbEventos>)ViewData["Eventos"];
    var idEvento = (int)ViewData["idEvento"];
}

<script src="~/assets/js/pages/table/table_data.js"></script>
<script src="~/assets/plugins/sweet-alert/sweetalert.min.js"></script>
<script src="~/assets/js/pages/sweet-alert/sweet-alert-data.js"></script>

<!DOCTYPE html>

<html>
<div class="profile-content">
    @if (TempData["msg"] != null)
    {
        @Html.Raw(TempData["msg"])
    }
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-topline-green">
                <div class="card-head">
                    <header>EVENTOS</header>
                </div>
                <div class="white-box">
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <!-- text input -->
                                        <form asp-action="OpcionesEventos" asp-antiforgery="true">
                                            <div class="form-group">
                                                <div class="col-md-3 col-sm-3">
                                                    <label>Elija la categoria del evento</label>
                                                    <select name="idEvento" id="tipo" class="form-control">
                                                        <option value="">Seleccionar...</option>
                                                        @foreach (var item in y)
                                                        {
                                                            <option value=@item.IdEventos>@Html.DisplayFor(modelItem => item.Nombre)</option>
                                                        }
                                                    </select>
                                                    <br />
                                                    <button id="registrarEvento" type="submit" class="btn btn-success btn-sm m-b-10">
                                                        Buscar
                                                    </button>
                                                </div>
                                                
                                            </div>
                                        </form>
                                        <div class="table-scrollable">
                                            <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example1">
                                                <thead>
                                                    <tr>
                                                        <th class="center">Nombre del evento</th>
                                                        <th class="center">Acciones</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var a in x)
                                                    {
                                                        <tr class="odd gradeX">
                                                            <td class="center">@Html.DisplayFor(modelItem => a.Nombre)</td>
                                                            <td class="center">
                                                                <a asp-route-id="@a.IdEventos" asp-route-idEvento="@idEvento" asp-controller="EstudiantesEventos" asp-action="FormEvento" class="btn btn-success btn-xs infoextra" title="Toda la información">
                                                                    <i class="fa fa-check"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
