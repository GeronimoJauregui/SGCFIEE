@model SGCFIEE.Models.CursosTalleresAplicacion;
@{
    ViewData["Title"] = "CrearCursos_Talleres";
    Layout = "~/Views/Home/Principal.cshtml";
    var acad = (IEnumerable<Academicos>)ViewData["academicos"];
    var tipoUsu = (int)ViewData["tipo"];
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>CURSOS O TALLERES</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form asp-controller="AcademicosParticipacionesAcad" asp-action="GuardarCursos_Talleres" method="post" enctype="multipart/form-data"> 
                        <input name="Lider" value="1" type="hidden"/>
                        <div class="row">
                            <div class="col-md-6 col-md-6">
                                @if (tipoUsu == 1)
                                {
                                    <div class="form-group">
                                        <label>Académico</label>
                                        <select name="idAcademico" class="form-control">
                                            @foreach (var item in acad)
                                            {
                                                <option value="@item.IdAcademicos">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno)</option>
                                            }
                                        </select>
                                    </div>
                                }
                                <div class="form-group">
                                    Seleccione:<br>
                                    <input asp-for="CT" type="radio" value="1" checked /> Curso<br>
                                    <input asp-for="CT" type="radio" value="0" /> Taller
                                </div>
                            </div>
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    <label>Titulo</label>
                                    <input asp-for="Titulo" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                    <span asp-validation-for="Titulo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Fecha</label>
                                    <input asp-for="Fecha" type="date" class="form-control" placeholder="mm/dd/aa" required="required">
                                    <span asp-validation-for="Fecha" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Subir evidencia:</label><br>
                                    <input asp-for="Archivo" type="file" class="default" id="archivo" name="file" required="required">
                                </div>
                                <br>
                                <button type="submit" class="btn btn-success btn-sm m-b-10" name="Guardar" style="float:right">
                                    Guardar
                                </button>
                                <a asp-controller="AcademicosParticipacionesAcad" asp-action="IndexCursos_Talleres" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>
