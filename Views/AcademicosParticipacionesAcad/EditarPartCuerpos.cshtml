@{
    ViewData["Title"] = "CrearPartCuerpos";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>PARTICIPACIÓN EN CUERPOS ACADÉMICOS</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form enctype='multipart/form-data' method="POST" onsubmit="return validacion_datosMaterial()" action="Academicos_Produccion" name="fileMDidactico">
                    <input type="text" name="ACCION" id="ACCION" value="Guardar_Material" hidden="true">
                    <div class="row">
                        <div class="col-md-6 col-md-6">

                            <div class="form-group">
                                <label>Académico</label>
                                <select id="academicos" class="form-control" name="id_academico">
                                        <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Cuerpo académico</label>
                                <select id="cuerpo" class="form-control" name="id_academico">
                                        <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Registro</label>
                                <input id="registro" type="text" class="form-control" placeholder="Ingresar...">
                            </div>
                            
                        </div>
                        <div class="col-md-6 col-md-6">
                            <div class="form-group">
                                <label>Tipo de participación</label>
                                <input id="participacion" type="text" class="form-control" placeholder="Ingresar...">
                            </div>
                            <div class="form-group">
                                <label>Años de vigencia</label>
                                <input id="vigencia" type="text" class="form-control" placeholder="Ingresar...">
                            </div>
                            <div class="form-group">
                                <label>Evidencia:</label><br>
                                <input type="file" class="default" id="archivo" name="Archivo">
                            </div>
                            <br>
                            <input id="guardarMaterial" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                            <a asp-controller="AcademicosParticipacionesAcad" asp-action="Index" class="btn btn-default btn-sm m-b-10" style="float:right">
                            Cancelar
                            </a>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>
