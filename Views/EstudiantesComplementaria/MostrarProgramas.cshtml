@model IEnumerable<SGCFIEE.Models.ProgramaEducativo>
@{


    ViewData["Title"] = "Mostrar Programas";
    Layout = "~/Views/Home/Principal.cshtml";
}

<!DOCTYPE html>

<html>
<div class="row">
    <div class="col-md-12">
        <div class="card card-topline-green">
            <div class="card-head">
                <header>PROGRAMAS EDUCATIVOS</header>
                <div class="tools">
                    <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                    <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                </div>
            </div>
            <div class="card-body ">
                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="tbcomp">
                    <thead>
                        <tr>
                            <th style="width: 150px;"> Nombre    </th>
                            <th class="center"> Creditos </th>
                            <th class="center"> Clave </th>
                            <th class="center"> Facultad</th>
                            <th class="center"> Area </th>
                            <th style="display: none"></th>
                            <th class="center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">

                                <td class="center">@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.Creditos)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.ClvPrograma)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.Facultad)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.Area)</td>
                                <td style="display: none"></td>

                                <td>
                                    <div class="center">
                                        <a asp-route-id="@item.IdProgramaEducativo" asp-controller="EstudiantesComplementaria" asp-action="DetallesPrograma" class="btn btn-success btn-xs infoextra" title="Toda la información">
                                            <i class="fa fa-check"></i>
                                        </a>
                                        <a asp-route-id="@item.IdProgramaEducativo" asp-controller="EstudiantesComplementaria" asp-action="EditarPrograma" class="btn btn-primary btn-xs editar" title="Editar">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a asp-route-id="@item.IdProgramaEducativo" asp-controller="EstudiantesComplementaria" asp-action="EliminarPrograma" class="btn btn-danger btn-xs eliminar" title="Eliminar">
                                            <i class="fa fa-trash-o "></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</html>
