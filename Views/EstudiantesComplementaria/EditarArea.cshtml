@model SGCFIEE.Models.AreaExperienciaEducativa
@{


    ViewData["Title"] = "Editar Area";
    Layout = "~/Views/Home/Principal.cshtml";
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="white-box">
                    <!-- Nav tabs -->
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Información De Areas Experiencias Educativas</a></li>
                        </ul>
                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <form asp-action="EditarArea" asp-antiforgery="true">
                                <div class="row">
                                    <input asp-for="IdAreaExperienciaEducativa" value="@Model.IdAreaExperienciaEducativa" hidden />
                                    <div class="col-md-12 col-sm-12">
                                        <div class="card-head">
                                            <header>Areas</header>
                                        </div>
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">

                                                <div class="col-md-6 col-sm-6">
                                                    <div class="form-group">
                                                        <label asp-for="Nombre">Nombre del Area</label>
                                                        <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre del area">
                                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a asp-controller="EstudiantesComplementaria" asp-action="Index" class="btn btn-default btn-sm m-b-10">
                                    Cancelar
                                </a>
                                <input id="enviaarea" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
