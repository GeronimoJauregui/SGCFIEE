@model SGCFIEE.Models.ProgramaEducativo
@{
    ViewData["Title"] = "CrearPrograma";
    Layout = "~/Views/Home/Principal.cshtml";
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green">
                    <div class="card-head" id="idDatosPersonales">
                        <header>Información del programa</header>
                    </div>
                </div>
                <div class="white-box">
                    
                    <div class="tab-content">
                        <form asp-action="CrearPrograma" asp-antiforgery="true" name="fileinfo">
                            <div class="tab-pane fontawesome-demo active show" id="tab1">

                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">

                                                <div class="col-md-6 col-sm-6">
                                                    <!-- text input -->
                                                    <div class="form-group">
                                                        <label asp-for="Nombre">Nombre del programa</label>
                                                        <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="Creditos">Creditos</label>
                                                        <input asp-for="Creditos" type="number" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="Creditos" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="ClvPrograma">Clave del programa</label>
                                                        <input asp-for="ClvPrograma" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="ClvPrograma" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="Facultad">Facultad</label>
                                                        <input asp-for="Facultad" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="Facultad" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="Campus">Campus</label>
                                                        <input asp-for="Campus" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="Campus" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-6">
                                                    <div class="form-group">
                                                        <label asp-for="Nivel">Nivel</label>
                                                        <input asp-for="Nivel" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="Nivel" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="CreditosMinXp">Creditos min por periodo</label>
                                                        <input asp-for="CreditosMinXp" type="number" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="CreditosMinXp" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="CreditosMaxXp">Creditos max por periodo</label>
                                                        <input asp-for="CreditosMaxXp" type="number" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="CreditosMaxXp" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="Area">Area</label>
                                                        <input asp-for="Area" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="Area" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6">
                                                    <a asp-controller="EstudiantesComplementaria" asp-action="MostrarProgramas" class="btn btn-success btn-sm m-b-10">
                                                        Mostrar tabla
                                                    </a>
                                                </div>
                                                <div class="col-md-6 col-sm-6">
                                                    <input id="enviaprogra" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                                                    <a asp-controller="EstudiantesComplementaria" asp-action="Index" class="btn btn-default btn-sm m-b-10" style="float:right">
                                                        Cancelar
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
