@model SGCFIEE.Models.TbSalones
@{


    ViewData["Title"] = "Editar Salon";
    Layout = "~/Views/Home/Principal.cshtml";
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="white-box">
                    <!-- Nav tabs -->
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Información de los salones</a></li>
                        </ul>
                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <form asp-action="EditarSalon" asp-antiforgery="true">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="card-head">
                                            <header>Salones</header>
                                        </div>
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">
                                                <input asp-for="IdTbSalones" value="@Model.IdTbSalones" hidden /> 
                                                <div class="col-md-6 col-sm-6">
                                                    <!-- text input -->
                                                    <div class="form-group">
                                                        <label asp-for="ClaveSalon">Clave del salon/Nombre del laboratorio</label>
                                                        <input asp-for="ClaveSalon" type="text" class="form-control" placeholder="Clave del salon/nombre del laboratorio">
                                                        <span asp-validation-for="ClaveSalon" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="Edificio">Edificio</label>
                                                        <input asp-for="Edificio" type="text" class="form-control" placeholder="Enter ...">
                                                        <span asp-validation-for="Edificio" class="text-danger"></span>
                                                    </div>

                                                </div>
                                                <div class="col-md-6 col-sm-6">

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a asp-controller="EstudiantesComplementaria" asp-action="Index" class="btn btn-default btn-sm m-b-10">
                                    Cancelar
                                </a>
                                <input id="enviasa" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
