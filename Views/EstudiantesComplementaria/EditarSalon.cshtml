@model SGCFIEE.Models.TbSalones
@{


    ViewData["Title"] = "Editar Salon";
    Layout = "~/Views/Home/Principal.cshtml";
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green">
                    <div class="card-head">
                        <header>Información de los salones</header>
                    </div>
                </div>
                <div class="white-box">
                    
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <form asp-action="EditarSalon" asp-antiforgery="true">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">
                                                <input asp-for="IdTbSalones" value="@Model.IdTbSalones" hidden /> 
                                                <div class="col-md-6 col-sm-6">
                                                    <!-- text input -->
                                                    
                                                    <div class="form-group">
                                                        <label asp-for="Edificio">Edificio</label>
                                                        <input asp-for="Edificio" type="text" class="form-control" placeholder="Enter ...">
                                                        <span asp-validation-for="Edificio" class="text-danger"></span>
                                                    </div>

                                                </div>
                                                <div class="col-md-6 col-sm-6">
                                                    <div class="form-group">
                                                        <label asp-for="ClaveSalon">Número del salon</label>
                                                        <input asp-for="ClaveSalon" type="text" class="form-control" placeholder="Clave del salon/nombre del laboratorio">
                                                        <span asp-validation-for="ClaveSalon" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6">
                                                    
                                                </div>
                                                <div class="col-md-6 col-sm-6">
                                                    <input id="enviasa" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                                                    <a asp-controller="EstudiantesComplementaria" asp-action="MostrarSalon" class="btn btn-default btn-sm m-b-10" style="float:right">
                                                        Cancelar
                                                    </a>
                                                    
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
