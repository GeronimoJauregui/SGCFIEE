@model SGCFIEE.Models.TbRubrosexamenes
@{


    ViewData["Title"] = "Editar Rubro";
    Layout = "~/Views/Home/Principal.cshtml";
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green">
                    <div class="card-head" id="idDatosPersonales">
                        <header>Información de rubros de examen</header>
                    </div>
                </div>
                <div class="white-box">
                    
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <form asp-action="EditarRubro" asp-antiforgery="true">
                                <div class="row">
                                    <input asp-for="IdTbRubrosExamenes" value="@Model.IdTbRubrosExamenes" hidden />
                                    <div class="col-md-12 col-sm-12">
                                        
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6">
                                                    <div class="form-group">
                                                        <label asp-for="RubroExamen">Nombre del rubro</label>
                                                        <input asp-for="RubroExamen" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                                        <span asp-validation-for="RubroExamen" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-6">
                                                    <div class="form-group">
                                                    Tipo de examen:<br>
                                                    <input asp-for="TipoExamen" type="radio" value="1" checked /> Examen ingreso<br>
                                                    <input asp-for="TipoExamen" type="radio" value="0" /> Examen interno
                                                    </div>

                                                    <div class="form-group">
                                                    Estado:<br>
                                                    <input asp-for="Status" type="radio" value="1" checked /> Activo<br>
                                                    <input asp-for="Status" type="radio" value="0" /> Inactivo
                                                    </div>
                                                 </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6">
                                                    
                                                </div>
                                                <div class="col-md-6 col-sm-6">
                                                    <input id="enviaru" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                                                    <a asp-controller="EstudiantesComplementaria" asp-action="MostrarRubro" class="btn btn-default btn-sm m-b-10" style="float:right">
                                                        Cancelar
                                                    </a>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
