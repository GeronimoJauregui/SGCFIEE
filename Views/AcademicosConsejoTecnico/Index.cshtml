@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/Principal.cshtml";
}
<script src="~/assets/js/pages/table/table_data.js"></script>

<!DOCTYPE html>
<html>
<div class="row">
    <div class="col-md-12">
        <div class="card card-topline-green">
            <div class="card-head">
                <header>CONSEJO TECNICO</header>
                <div class="tools">
                    <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                    <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                </div>
            </div>
            <div class="card-body ">
                <div class="row p-b-20">
                    <div class="col-md-6 col-sm-6 col-6">
                        <div class="btn-group">
                            <a asp-controller="AcademicosConsejoTecnico" asp-action="Crear" class="btn btn-success btn-sm m-b-10">
                                Agregar <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example1">
                    <thead>
                        <tr>
                            <th class="center"> Número de personal </th>
                            <th class="center"> Nombre del académico</th>
                            <th class="center"> Periodo de inicio </th>
                            <th class="center"> Periodo de termino </th>
                            <th class="center"> Evidencia</th>
                            <th class="center"> Acción </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd gradeX">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="center">
                                <button class="btn btn-primary btn-xs descargar">
                                    <i class="fa fa-download"></i>
                                </button>
                            </td>
                            <td class="center">
                                <a asp-controller="AcademicosConsejoTecnico" asp-action="Editar" class="btn btn-primary btn-xs modificar">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <button class="btn btn-danger btn-xs eliminar">
                                    <i class="fa fa-trash-o "></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</html>
