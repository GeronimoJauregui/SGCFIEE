@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>CONSEJO TECNICO</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form enctype='multipart/form-data' method="POST" onsubmit="return validacion()" action="Academicos_CT" name="fileinfo">
                    <input type="text" name="ACCION" id="ACCION" value="GUARDAR" hidden="true">
                    <div class="row">                        
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Académico</label>
                                <select class="form-control" id="academico" name="idAcademico">
                                    <option></option>
                                </select>
                            </div> 
                            <div class="form-group">
                                <label>Periodo de inicio</label>
                                <select class="form-control" id="periodo_inicio" name="idPeriodoI">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Periodo de termino</label>
                                <select class="form-control" id="periodo_cierre" name="idPeriodoT">
                                       <option></option>
                                </select>
                            </div>
                            <label>Archivo de evidencia</label><br>
                            <input type="file" class="default" id="archivo" name="Archivo">
                            <br>                            
                            <input id="guardar" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                            <a asp-controller="AcademicosConsejoTecnico" asp-action="Index" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                            </a>
                        </div>                    
                    </div>
                    </form>
                <div name="mensaje"></div>
                </div>
            </div>
        </div>
    </div>
</html>
