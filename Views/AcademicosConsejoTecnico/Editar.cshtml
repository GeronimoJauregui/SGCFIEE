@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>CONSEJO TECNICO</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Académico</label>
                                <select class="form-control" id="academico">
                                    <option></option>
                                </select>
                            </div> 
                            <div class="form-group">
                                <label>Periodo de inicio</label>
                                <select class="form-control" id="periodo_inicio">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Periodo de termino</label>
                                <select class="form-control" id="periodo_cierre">
                                    <option></option>
                                </select>
                            </div>
                            <label>Archivo de evidencia</label><br>
                            <input type="file" class="default" value="${ct.archivo}">
                            <br>
                            <input id="guardar" type="button" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                            <a asp-controller="AcademicosConsejoTecnico" asp-action="Index" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>
