@model SGCFIEE.Models.PafisSolicitados;
@{
    Layout = "~/Views/Home/Principal.cshtml";
    var x = (IEnumerable<Academicos>)ViewData["academicos"];
    var z = (IEnumerable<TipoPeriodo>)ViewData["periodos"];
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="white-box">
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Solicitud PAFIs</a></li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="card-body " id="bar-parent2">
                                        <!-- text input -->
                                        <form asp-action="Crear" asp-antiforgery="true">
                                            <div class="card-body " id="bar-parent2">
                                                <div class="row">
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label asp-for="NombreSolicitados">Nombre de materia/curso del pafi que desea solicitar</label>
                                                            <input asp-for="NombreSolicitados" id="nom" type="text" class="form-control" placeholder="Nombre ..." required="required">
                                                            <span asp-validation-for="NombreSolicitados" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="HorarioPosible">Horario posible</label>
                                                            <input asp-for="HorarioPosible" id="horario" type="text" class="form-control" placeholder="Horario posible ..." required="required">
                                                            <span asp-validation-for="HorarioPosible" class="text-danger"></span>
                                                        </div>
                                                        
                                                    </div>
                                                    <div class="col-md-6 col-sm-6">
                                                        
                                                        <div class="form-group">
                                                            <label>Periodo</label>
                                                            <select asp-for="IdPeriodo" class="form-control">
                                                                @foreach (var item in z)
                                                                {
                                                                    <option value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="IdAcademico">Maestro posible</label>
                                                            <select asp-for="IdAcademico" class="form-control">
                                                                @foreach (var item in x)
                                                                {
                                                                    var name = item.Nombre + " " + item.ApellidoPaterno + " " + item.ApellidoMaterno;
                                                                    <option value="@item.IdAcademicos">@Html.DisplayFor(modelItem => name)</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-sm m-b-10" id="enviarSolicitud" name="Enviar">
                                                Enviar
                                            </button>
                                        </form>
                                        <a id="cancelarEdicion" asp-action="Index" asp-controller="EstudiantesPafis" class="btn btn-default btn-sm m-b-10">
                                            Cancelar
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


</html>
