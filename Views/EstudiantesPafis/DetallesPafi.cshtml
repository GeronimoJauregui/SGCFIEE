@model IEnumerable<SGCFIEE.Models.InformacionPafiCompleta>
@{
    Layout = "~/Views/Home/Principal.cshtml";
    var x = (int)ViewData["tipo"];
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="card-head">
                        <header>@foreach (var item in Model) { @Html.DisplayFor(modelItem => item.nombrePafi) break; }</header>
                        <div class="tools">
                            <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                            <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                            <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                        </div>
                    </div>
                <div class="white-box">
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <div class="row">
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Nombre del académico</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.academico)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Horario</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.horario)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Salón</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.salon)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Número de horas</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.Horas)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Programa educativo</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.programa)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Tipo de PAFI</strong>
                                                @foreach (var item in Model) {
                                                    @if (item.tipoPafi == 0)
                                                    {
                                                        <p class="text-muted">Nivelatorio</p>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-muted">Remedial</p>
                                                    }

                                                    break;
                                                }
                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                    @if (x == 1)
                                    {
                                        <div class="table-scrollable">
                                            <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="tabla_califEE">
                                                <thead>
                                                    <tr>
                                                        <th hidden></th>
                                                        <th class="center"> Matricula</th>
                                                        <th class="center"> Alumno </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr class="odd gradeX">
                                                            <td hidden></td>
                                                            <td class="center">@Html.DisplayFor(modelItem => item.matricula)</td>
                                                            <td class="center">@Html.DisplayFor(modelItem => item.alumno)</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    <br />
                                    <a asp-controller="EstudiantesPafis" asp-action="Index" class="btn btn-success btn-sm m-b-10" style="float:right">
                                    Regresar
                                    </a>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
