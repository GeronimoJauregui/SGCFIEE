@model IEnumerable<SGCFIEE.Models.InformacionPafiCompleta>
@{
    Layout = "~/Views/Home/Principal.cshtml";
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="white-box">
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab"> @foreach (var item in Model) { @Html.DisplayFor(modelItem => item.nombrePafi) break; }</a></li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    <div class="card-body " id="bar-parent2">
                                        <div class="row">
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Nombre del academico</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.academico)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Horario</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.horario)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Salon</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.salon)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Numero de horas</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.Horas)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Programa educativo</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.programa)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                            <div class="col-md-6 col-6 b-r">
                                                <strong>Tipo de pafi</strong>
                                                @foreach (var item in Model) {
                                                    <p class="text-muted">@Html.DisplayFor(modelItem => item.tipoPafi)</p>
                                                    break;
                                                }
                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
