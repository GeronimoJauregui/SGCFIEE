@model SGCFIEE.Models.PafisAcademicos;
@{
    Layout = "~/Views/Home/Principal.cshtml";
    var y = (IEnumerable<Academicos>)ViewData["academicos"];
    var x = (IEnumerable<TbSalones>)ViewData["salones"];
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="white-box">
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Editar</a></li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="card-body " id="bar-parent2">
                                        <!-- text input -->
                                        <form asp-action="Editar" asp-antiforgery="true">
                                            <div class="card-body " id="bar-parent2">
                                                <div class="row">
                                                    <input type="hidden" asp-for="IdPafis" />
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label asp-for="Nombre">Nombre del Pafi: </label>
                                                            <input asp-for="Nombre" id="idpafi" type="text" class="form-control">
                                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Horario">Horario: </label>
                                                            <input asp-for="Horario" id="horas" type="text" class="form-control">
                                                            <span asp-validation-for="Horario" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="IdAcademico">Academico: </label>
                                                            <select asp-for="IdAcademico" class="form-control">
                                                                @foreach (var item in y)
                                                                {
                                                                    var name = item.Nombre + " " + item.ApellidoPaterno + " " + item.ApellidoMaterno;
                                                                    @if (item.IdAcademicos != Model.IdAcademico)
                                                                    {
                                                                        <option value="@item.IdAcademicos">@Html.DisplayFor(modelItem => name)</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option selected value="@item.IdAcademicos">@Html.DisplayFor(modelItem => name)</option>
                                                                    }
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="IdSalon">Salon asignado:</label>
                                                            <select asp-for="IdSalon" id="salones" class="form-control">
                                                                @foreach (var i in x)
                                                                {
                                                                    @if (i.IdTbSalones != Model.IdSalon)
                                                                    {
                                                                        <option value="@i.IdTbSalones">@Html.DisplayFor(modelItem => i.ClaveSalon)</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option selected value="@i.IdTbSalones">@Html.DisplayFor(modelItem => i.Edificio)-@Html.DisplayFor(modelItem => i.ClaveSalon)</option>
                                                                    }
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Estado">Estado:</label>
                                                            <select asp-for="Estado" id="salones" class="form-control">
                                                                @if (Model.Estado == 0)
                                                                {
                                                                    <option selected value="0">Solicitud</option>
                                                                    <option value="1">Aprobado</option>
                                                                    <option value="2">Concluido</option>
                                                                }
                                                                @if (Model.Estado == 1)
                                                                {
                                                                    <option value="0">Solicitud</option>
                                                                    <option selected value="1">Aprobado</option>
                                                                    <option value="2">Concluido</option>
                                                                }
                                                                @if (Model.Estado == 2)
                                                                {
                                                                    <option value="0">Solicitud</option>
                                                                    <option value="1">Aprobado</option>
                                                                    <option selected value="2">Concluido</option>
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="NumHoras">Total de horas</label>
                                                            <input asp-for="NumHoras"  class="form-control"/>
                                                            <span asp-validation-for="NumHoras"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-sm m-b-10">
                                                Guardar cambios
                                            </button>
                                        </form>
                                        <a asp-controller="EstudiantesPafis" asp-action="Index" id="cancelarEdicion" type="submit" class="btn btn-default btn-sm m-b-10">
                                            Cancelar
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
</html>
