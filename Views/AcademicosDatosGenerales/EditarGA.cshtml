
@{
    ViewData["Title"] = "EditarGA";
    Layout = "~/Views/Home/Principal.cshtml";
    var estudios = (IEnumerable<pEstudios>)ViewData["estudios"];
    var academico = (int)ViewData["academico"];
    var tipo = (int)ViewData["tipo"];
}

<!DOCTYPE html>
<html>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card card-box">
            <div class="card-topline-green card-head">
                <header>DATOS DEL ACADÉMICO</header>
            </div>
            <div class="white-box">
                <!-- Nav tabs -->
                <div class="p-rl-20">
                    <ul class="nav customtab nav-tabs" role="tablist">
                        <li class="nav-item"><a asp-route-id="@academico" asp-controller="AcademicosDatosGenerales" asp-action="EditarDG" class="nav-link">Datos generales</a></li>
                        <li class="nav-item"><a asp-route-id="@academico" asp-controller="AcademicosDatosGenerales" asp-action="EditarGA" class="nav-link active">Grados académicos</a></li>
                        <li class="nav-item"><a asp-route-id="@academico" asp-controller="AcademicosDatosGenerales" asp-action="EditarCertificaciones" class="nav-link">Certificaciones</a></li>
                        <li class="nav-item"><a asp-route-id="@academico" asp-controller="AcademicosDatosGenerales" asp-action="EditarCD" class="nav-link">Cursos/Diplomados</a></li>
                        <li class="nav-item"><a asp-route-id="@academico" asp-controller="AcademicosDatosGenerales" asp-action="EditarEP" class="nav-link">Experiencia profesional</a></li>
                        <li class="nav-item"><a asp-route-id="@academico" asp-controller="AcademicosDatosGenerales" asp-action="EditarTC" class="nav-link">Tipo de contratación</a></li>
                        <li class="nav-item"><a asp-route-id="@academico" asp-controller="AcademicosDatosGenerales" asp-action="EditarDistinciones" class="nav-link">Reconocimientos académicos</a></li>
                    </ul>
                </div>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active fontawesome-demo" id="tab1">
                        <div class="col-md-12 col-sm-12">
                            <div>
                                <div class="row p-b-20">
                                    <div class="col-md-6 col-sm-6 col-6">
                                        <div class="btn-group">
                                            <a asp-route-id="@academico" asp-controller="AcademicosDatosGenerales" asp-action="FormCrearGA" id="agregargrado" class="btn btn-success btn-sm m-b-10">
                                                Agregar <i class="fa fa-plus" style="color: white"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-scrollable">
                                    <table class="table table-striped table-bordered table-hover table-checkable order-column " style="width: 100%" id="EditarGA">
                                        <thead>
                                            <tr>
                                                <th hidden></th>
                                                <th class="mdl-data-table__cell--non-numeric center">Nombre</th>
                                                <th class="mdl-data-table__cell--non-numeric center">Institución</th>
                                                <th class="mdl-data-table__cell--non-numeric center">Reconocimiento</th>
                                                <th class="mdl-data-table__cell--non-numeric center">Fecha de egreso</th>
                                                <th class="mdl-data-table__cell--non-numeric center">Fecha de titulación</th>
                                                <th class="mdl-data-table__cell--non-numeric center">Titulo</th>
                                                <th class="mdl-data-table__cell--non-numeric center">Cedula</th>
                                                <th class="mdl-data-table__cell--non-numeric center">Acción</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in estudios)
                                            {
                                            <tr>
                                                <td hidden></td>
                                                <td class="mdl-data-table__cell--non-numeric">@Html.DisplayFor(modelItem => item.GradoTitulo)</td>
                                                <td class="mdl-data-table__cell--non-numeric">@Html.DisplayFor(modelItem => item.Institucion)</td>
                                                <td class="mdl-data-table__cell--non-numeric">@Html.DisplayFor(modelItem => item.Reconocimiento)</td>
                                                <td class="center">@Html.DisplayFor(modelItem => item.FechaDeEgreso)</td>
                                                <td class="center">@Html.DisplayFor(modelItem => item.FechaDeTitulacion)</td>
                                                <td class="center">
                                                    <a class="btn btn-primary btn-xs" asp-route-filename="@item.ArchivoTitulo" asp-controller="AcademicosDatosGenerales" asp-action="DescargarGA">
                                                        <i class="fa fa-download"></i>
                                                    </a>
                                                </td>
                                                <td class="center">
                                                    <a class="btn btn-primary btn-xs" asp-route-filename="@item.ArchivoCedula" asp-controller="AcademicosDatosGenerales" asp-action="DescargarGA">
                                                        <i class="fa fa-download"></i>
                                                    </a>
                                                </td>
                                                <td class="center">
                                                    <a asp-route-id="@item.IdEstudios" asp-route-idAcad="@academico" asp-controller="AcademicosDatosGenerales" asp-action="FormEditarGA" title="Editar" class="btn btn-primary btn-xs verdatos">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                    <a data-value="@item.IdEstudios" data-controlador="AcademicosDatosGenerales" data-accion="EliminarGA" data-id="@academico" data-regreso="EditarGA" name="eliminaracademico" class="btn btn-danger btn-xs" title="Eliminar">
                                                        <i class="fa fa-trash-o "></i>
                                                    </a>
                                                </td>
                                                    
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

