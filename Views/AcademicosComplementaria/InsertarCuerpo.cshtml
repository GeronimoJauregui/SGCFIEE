@model SGCFIEE.Models.CuerposAcademicos;
@{
    Layout = "~/Views/Home/Principal.cshtml";
    var estado = (IEnumerable<CuerpoEstados>)ViewData["estados"];
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green">
                    <div class="card-head">
                        <header>Cuerpo académico</header>
                    </div>
                </div>
                <div class="white-box">
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="card-body " id="bar-parent2">
                                        <!-- text input -->
                                        <form asp-action="GuardarCuerpo" asp-antiforgery="true">
                                            <div class="card-body " id="bar-parent2">
                                                <div class="btn-group" style="float:right">
                                                    <a  asp-action="MostrarEstado" asp-controller="AcademicosComplementaria" class="btn btn-default btn-sm m-b-10" >
                                                        Mostrar tabla de estado
                                                    </a>
                                                </div>
                                                <div class="btn-group" style="float:right">
                                                    <a  asp-action="InsertarEstado" asp-controller="AcademicosComplementaria" class="btn btn-success btn-sm m-b-10" >
                                                        Insertar estado
                                                    </a>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label asp-for="Nombre">Nombre del cuerpo académico</label>
                                                            <input asp-for="Nombre" id="nom" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Estado del cuerpo académico</label>
                                                        <select asp-for="IdEstado" class="form-control">
                                                            @foreach (var item in estado)
                                                            {
                                                                <option value="@item.IdEstado">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                                            }
                                                        </select>
                                                    </div>
                                                    
                                                </div>
                                                
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 col-sm-12">
                                                    <div class="card-body " id="bar-parent2">
                                                        <div class="row">
                                                            <div class="col-md-6 col-sm-6">
                                                                <a asp-controller="AcademicosComplementaria" asp-action="MostrarCuerpos" class="btn btn-success btn-sm m-b-10">
                                                                    Mostrar tabla
                                                                </a>
                                                            </div>
                                                            <div class="col-md-6 col-sm-6">
                                                                <button type="submit" class="btn btn-success btn-sm m-b-10" id="enviarSolicitud" style="float:right">
                                                                    Guardar
                                                                </button>
                                                                <a asp-action="VistaOpcionesCatalogos" asp-controller="AcademicosComplementaria" class="btn btn-default btn-sm m-b-10" style="float:right">
                                                                    Cancelar
                                                                </a>
                                                    
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
</html>
