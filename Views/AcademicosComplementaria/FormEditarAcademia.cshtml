@model SGCFIEE.Models.Academias;
@{
    Layout = "~/Views/Home/Principal.cshtml";
}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="white-box">
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Editar</a></li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="card-body " id="bar-parent2">
                                        <!-- text input -->
                                        <form asp-action="EditarAcademia" asp-antiforgery="true">
                                            <div class="card-body " id="bar-parent2">
                                                <div class="row">
                                                    <input type="hidden" asp-for="IdAcademias" />
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label asp-for="Nombre">Nombre de la academia: </label>
                                                            <input asp-for="Nombre" id="idpafi" type="text" class="form-control">
                                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Status">Estado: </label>
                                                            <select asp-for="Status" class="form-control">
                                                                @if (Model.Status == 1)
                                                                {
                                                                    <option selected value="1">Activo</option>
                                                                    <option value="2">Baja</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="1">Activo</option>
                                                                    <option selected value="2">Baja</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-sm m-b-10">
                                                Guardar cambios
                                            </button>
                                        </form>
                                        <a asp-controller="AcademicosComplementaria" asp-action="MostrarAcademias" id="cancelarEdicion" class="btn btn-default btn-sm m-b-10">
                                            Cancelar
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
</html>
