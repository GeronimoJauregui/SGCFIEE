@model IEnumerable<SGCFIEE.Models.TbSalones>
@{
    ViewData["Title"] = "Mostrar Salones";
    Layout = "~/Views/Home/Principal.cshtml";
}

<link rel="stylesheet" href="~/assets/plugins/sweet-alert/sweetalert.min.css">
<script src="~/assets/plugins/sweet-alert/sweetalert.min.js"></script>
<script src="~/assets/js/pages/sweet-alert/sweet-alert-data.js"></script>
<!DOCTYPE html>

<html>
<div class="row">
    @if (TempData["msg"] != null)
    {
        @Html.Raw(TempData["msg"])
    }
    <div class="col-md-12">
        <div class="card card-topline-green">
            <div class="card-head">
                <header>SALONES</header>
                <div class="tools">
                    <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                    <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                </div>
            </div>
            <div class="card-body ">
                <div class="row p-b-20">
                    <div class="col-md-6 col-sm-6 col-6">
                        <div class="btn-group">
                            <a  asp-action="CrearSalon" asp-controller="AcademicosComplementaria" class="btn btn-success btn-sm m-b-10">
                                INSERTAR
                            </a>
                        </div>
                        <a asp-controller="AcademicosComplementaria" asp-action="VistaOpcionesCatalogos" class="btn btn-default btn-sm m-b-10">
                            VOLVER
                        </a>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="tbcomp">
                    <thead>
                        <tr>
                            <th class="center" style="width: 700px;"> Número del salon</th>
                            <th class="center">Edificio</th>
                            <th style="display: none"></th>
                            <th class="center">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) { 
                            <tr class="odd gradeX">
                                <td class="center">@Html.DisplayFor(modelItem => item.ClaveSalon)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.Edificio)</td>
                                <td style="display: none"></td>

                                <td>
                                    <div class="center">
                                        <a asp-route-id="@item.IdTbSalones" asp-controller="AcademicosComplementaria" asp-action="EditarSalon" class="btn btn-primary btn-xs editar" title="Editar">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a data-value="@item.IdTbSalones" data-controlador="AcademicosComplementaria" data-accion="EliminarSalon" data-regreso="MostrarSalon" name="eliminardato" class="btn btn-danger btn-xs eliminar" title="Eliminar">
                                            <i class="fa fa-trash-o "></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</html>
