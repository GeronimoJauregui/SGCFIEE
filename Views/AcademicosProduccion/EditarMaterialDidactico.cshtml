@{
    ViewData["Title"] = "EditarMaterialDidactico";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>MATERIAL DIDACTICO</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <div class="row">
                        <div class="col-md-6 col-md-6">

                            <div class="form-group">
                                <label>Académico</label>
                                <select id="academicos" class="form-control">
                                        <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Periodo</label>
                                <select id="periodo" class="form-control">
                                        <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                Notas de clase:
                                <div class="radio p-0">
                                    <input type="radio" name="notas" id="optionsRadios1" value="1" <c:if test="${materialD.notas_clase==1}">checked=""</c:if>>
                                        <label for="optionsRadios1">
                                            Si
                                        </label>
                                    </div>
                                    <div class="radio p-0">
                                        <input type="radio" name="notas" id="optionsRadios2" value="0" <c:if test="${materialD.notas_clase==0}">checked=""</c:if>>
                                        <label for="optionsRadios2">
                                            No
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    Acetatos:
                                    <div class="radio p-0">
                                        <input type="radio" name="acetatos" id="optionsRadios3" value="1" <c:if test="${materialD.acetatos==1}">checked=""</c:if>>
                                        <label for="optionsRadios3">
                                            Si
                                        </label>
                                    </div>
                                    <div class="radio p-0">
                                        <input type="radio" name="acetatos" id="optionsRadios4" value="0" <c:if test="${materialD.acetatos==0}">checked=""</c:if>>
                                        <label for="optionsRadios4">
                                            No
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-md-6">  
                                <div class="form-group">
                                    Videos:
                                    <div class="radio p-0">
                                        <input type="radio" name="videos" id="optionsRadios5" value="1" <c:if test="${materialD.videos==1}">checked=""</c:if>>
                                        <label for="optionsRadios5">
                                            Si
                                        </label>
                                    </div>
                                    <div class="radio p-0">
                                        <input type="radio" name="videos" id="optionsRadios6" value="0" <c:if test="${materialD.videos==0}">checked=""</c:if>>
                                        <label for="optionsRadios6">
                                            No
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    Programas:
                                    <div class="radio p-0">
                                        <input type="radio" name="programas" id="optionsRadios7" value="1" <c:if test="${materialD.programas==1}">checked=""</c:if>>
                                        <label for="optionsRadios7">
                                            Si
                                        </label>
                                    </div>
                                    <div class="radio p-0">
                                        <input type="radio" name="programas" id="optionsRadios8" value="0" <c:if test="${materialD.programas==0}">checked=""</c:if>>
                                        <label for="optionsRadios8">
                                            No
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    Prototipos:
                                    <div class="radio p-0">
                                        <input type="radio" name="prototipos" id="optionsRadios9" value="1" <c:if test="${materialD.prototipos==1}">checked=""</c:if>>
                                        <label for="optionsRadios9">
                                            Si
                                        </label>
                                    </div>
                                    <div class="radio p-0">
                                        <input type="radio" name="prototipos" id="optionsRadios10" value="0" <c:if test="${materialD.prototipos==0}">checked=""</c:if>>
                                    <label for="optionsRadios10">
                                        No
                                    </label>
                                </div>

                            </div>
                            <div class="form-group">
                                <label>Acta academica:</label><br>
                                <input type="file" class="default" multiple="">
                            </div>
                            <br>
                            <input id="actualizarMaterial" type="button" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                            <a asp-controller="AcademicosProduccion" asp-action="IndexMaterialDidactico" class="btn btn-default btn-sm m-b-10" style="float:right">
                            Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>
