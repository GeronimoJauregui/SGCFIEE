@{
    ViewData["Title"] = "IndexMPractica";
    Layout = "~/Views/Home/Principal.cshtml";
}

<script src="~/assets/js/pages/table/table_data.js"></script>

<!DOCTYPE html>
<html>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>PRODUCCIÓN</header>
                </div>
                <div class="white-box">
                    <!-- Nav tabs -->
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a asp-controller="AcademicosProduccion" asp-action="IndexMaterialDidactico" class="nav-link">Material didactico</a></li>
                            <li class="nav-item"><a asp-controller="AcademicosProduccion" asp-action="IndexMPractica" class="nav-link  active">Manuales de practica</a></li>
                            <li class="nav-item"><a asp-controller="AcademicosProduccion" asp-action="IndexLibroEE" class="nav-link">Libros para una EE</a></li>
                            <li class="nav-item"><a asp-controller="AcademicosProduccion" asp-action="IndexProyectosE" class="nav-link">Proyecto educativo innovador</a></li>
                        </ul>
                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        
                        <div class="tab-pane  active" id="tab2">            
                            <div id="tabla_MPracticas">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card-body ">
                                            <div class="row p-b-20">
                                                <div class="col-md-6 col-sm-6 col-6">
                                                    <div class="btn-group">
                                                        <a asp-controller="AcademicosProduccion" asp-action="CrearMPractica" class="btn btn-success btn-sm m-b-10">
                                                            Agregar <i class="fa fa-plus" style="color:white"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="table-scrollable">
                                                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="MPractica">
                                                    <thead>
                                                        <tr>
                                                            <th class="center" style="width: 100px;"> Número de personal </th>
                                                            <th class="center"> Nombre del académico</th>
                                                            <th class="center"> Nombre del manual de practica </th>
                                                            <th class="center"> Periodo </th>
                                                            <th class="center"> Evidencia </th>
                                                            <th class="center"> Acción </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                            <tr class="odd gradeX" id="${listado_manualesP.id_manuales_practica}">
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td class="center">
                                                                    <button class="btn btn-primary btn-xs">
                                                                        <i class="fa fa-download"></i>
                                                                    </button>
                                                                </td>
                                                                <td class="center">
                                                                    <a asp-controller="AcademicosProduccion" asp-action="EditarMPractica" class="btn btn-primary btn-xs">
                                                                        <i class="fa fa-pencil"></i>
                                                                    </a>
                                                                    <a asp-controller="AcademicosProduccion" asp-action="EliminarMPractica" class="btn btn-danger btn-xs">
                                                                        <i class="fa fa-trash-o "></i>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>    
    </div>

</html>

