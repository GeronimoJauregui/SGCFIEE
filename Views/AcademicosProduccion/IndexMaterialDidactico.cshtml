@model  IEnumerable<SGCFIEE.Models.TablaMaterialD> 
@{
    ViewData["Title"] = "IndexMaterialDidactico";
    Layout = "~/Views/Home/Principal.cshtml";
}

<script src="~/assets/js/pages/table/table_data.js"></script>

<!DOCTYPE html>
<html>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>PRODUCCIÓN</header>
                </div>
                <div class="white-box">
                    <!-- Nav tabs -->
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a asp-controller="AcademicosProduccion" asp-action="IndexMaterialDidactico" class="nav-link active">Material didactico</a></li>
                            <li class="nav-item"><a asp-controller="AcademicosProduccion" asp-action="IndexMPractica" class="nav-link">Manuales de practica</a></li>
                            <li class="nav-item"><a asp-controller="AcademicosProduccion" asp-action="IndexLibroEE" class="nav-link">Libros para una EE</a></li>
                            <li class="nav-item"><a asp-controller="AcademicosProduccion" asp-action="IndexProyectosE" class="nav-link">Proyecto educativo innovador</a></li>
                        </ul>
                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active fontawesome-demo" id="tab1">
                            <div id="tabla_MDidacticos">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card-body ">
                                            <div class="row p-b-20">
                                                <div class="col-md-6 col-sm-6 col-6">
                                                    <div class="btn-group">
                                                        <a asp-controller="AcademicosProduccion" asp-action="CrearMaterialDidactico" class="btn btn-success btn-sm m-b-10">
                                                            Agregar <i class="fa fa-plus" style="color:white"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="table-scrollable">
                                                <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="MDidactico">
                                                    <thead>
                                                        <tr>
                                                            <th hidden></th>
                                                            <th class="center"> Número de personal </th>
                                                            <th class="center"> Nombre de académico</th>
                                                            <th class="center"> Notas de clase </th>
                                                            <th class="center"> Acetatos </th>
                                                            <th class="center"> Videos </th>
                                                            <th class="center"> Programas </th>
                                                            <th class="center"> Prototipos </th>
                                                            <th class="center"> Periodo </th>
                                                            <th class="center"> Evidencia </th>
                                                            <th class="center"> Acción </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr class="odd gradeX">
                                                                <td hidden></td>
                                                                <td>@Html.DisplayFor(modelItem => item.NumPersonal)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno)</td>
                                                                <td class="center">
                                                                    @if (item.NotasClase == 1)
                                                                    { <i class="fa fa-check"></i>  }
                                                                    @if (item.NotasClase == 0)
                                                                    {<i class="fa fa-times"></i>}
                                                                </td>
                                                                <td class="center"> 
                                                                    @if (item.Acetatos == 1)
                                                                    { <i class="fa fa-check"></i>  }
                                                                    @if (item.Acetatos == 0)
                                                                    {<i class="fa fa-times"></i>}
                                                                </td>
                                                                <td class="center"> 
                                                                    @if (item.Videos == 1)
                                                                    { <i class="fa fa-check"></i>  }
                                                                    @if (item.Videos == 0)
                                                                    {<i class="fa fa-times"></i>}
                                                                </td>
                                                                <td class="center">
                                                                    @if (item.Programas == 1)
                                                                    { <i class="fa fa-check"></i>  }
                                                                    @if (item.Programas == 0)
                                                                    {<i class="fa fa-times"></i>}
                                                                </td>
                                                                <td class="center"> 
                                                                    @if (item.Prototipos == 1)
                                                                    { <i class="fa fa-check"></i>  }
                                                                    @if (item.Prototipos == 0)
                                                                    {<i class="fa fa-times"></i>}
                                                                </td>
                                                                <td>@Html.DisplayFor(modelItem => item.Periodo)</td>
                                                                <td class="center">
                                                                    <a asp-route-filename="@item.Archivo" asp-controller="AcademicosProduccion" asp-action="DescargarMaterialDidactico" class="btn btn-primary btn-xs" title="Descargar evidencia">
                                                                        <i class="fa fa-download"></i>
                                                                    </a>
                                                                </td>
                                                                <td class="center">
                                                                    <a asp-route-id="@item.IdMDidactico" asp-controller="AcademicosProduccion" asp-action="EditarMaterialDidactico" class="btn btn-primary btn-xs" title="Editar">
                                                                        <i class="fa fa-pencil"></i>
                                                                    </a>
                                                                    <a data-value="@item.IdMDidactico" data-controlador="AcademicosProduccion" data-accion="EliminarMaterialDidactico" data-regreso="IndexMaterialDidactico" name="eliminardato" class="btn btn-danger btn-xs" title="Eliminar">
                                                                        <i class="fa fa-trash-o "></i>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>

</html>