@{
    ViewData["Title"] = "EditarEvalCT";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>EVALUACIÓN DEL CONSEJO TECNICO</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <div class="row">
                        <div class="col-md-6 col-md-6">

                            <div class="form-group">
                                <label>Académico</label>
                                <select id="academico" class="form-control">
                                        <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Periodo</label>
                                <select id="periodo" class="form-control">
                                        <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-md-6">                       
                            <div class="form-group">
                                <label>Calificación del desempeño</label>
                                <input id="calificacion1" type="number" placeholder="Ingresar..." min="0" max="100" class="form-control" value="">
                            </div>
                            <div class="form-group">
                                <label>Calificación de gestión</label>
                                <input id="calificacion2" type="number" placeholder="Ingresar..." min="0" max="100" class="form-control" value="">
                            </div>
                            <br>
                            <input id="actualizarEvaCT" type="button" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                            <a asp-controller="AcademicosEvaluaciones" asp-action="Index" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                             </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>
