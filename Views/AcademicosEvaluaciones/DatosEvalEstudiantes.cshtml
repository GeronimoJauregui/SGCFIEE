@model  IEnumerable<SGCFIEE.Models.CalifAcademicoEE>
@{
    ViewData["Title"] = "DatosEvalEstudiantes";
    Layout = "~/Views/Home/Principal.cshtml";
}
<script src="~/assets/js/pages/table/table_data.js"></script>
<script type="text/javascript" src="~/assets/js/pages/academicos/datatable.js"></script>
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-topline-green">
                <div class="card-head">
                    <header>CALIFICACIÓN POR EXPERIENCIA EDUCATIVA</header>
                    <div class="tools">
                        <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                        <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                        <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="col-md-3 col-6 b-r"> <strong>Académico</strong>
                        @foreach (var item in Model)
                        {
                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno)</p>
                            break;
                        }
                        
                    </div>
                    <div class="col-md-3 col-6 b-r"> <strong>Periodo </strong>
                        @foreach (var item in Model)
                        {
                            <p class="text-muted">@Html.DisplayFor(modelItem => item.Periodo)</p>
                            break;
                        }
                    </div>
                    <div class="table-scrollable">
                        <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="tabla_califEE">
                            <thead>
                                <tr>
                                    <th class="center"> NRC</th>
                                    <th class="center"> Experiencia educativa </th>
                                    <th class="center"> Calificación </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.Nrc)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ExperienciaE)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Calificacion)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a asp-controller="AcademicosEvaluaciones" asp-action="IndexEvalEstudiantes" class="btn btn-success btn-sm m-b-10" style="float:right">
                    Regresar
                    </a>
                </div>
            </div>
        </div>
    </div>
</html>
