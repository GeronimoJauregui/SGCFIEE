@{
    ViewData["Title"] = "EditarAcademia";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>COORDINADOR DE ACADEMIA</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <div class="row">
                        <div class="col-md-6 col-md-6">

                            <div class="form-group">
                                <label>Académico</label>
                                <select id="academicos" class="form-control">
                                       <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Academia</label>
                                <select id="academias" class="form-control">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-md-6">
                            <div class="form-group">
                                <label>Periodo de inicial</label>
                                <select id="periodoinicio" class="form-control">
                                    <option></option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Periodo de termino </label>
                                <select id="periodocierre" class="form-control">
                                        <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Archivo de evidencia:</label><br>
                                <input type="file" class="default" multiple="">
                            </div>
                            <br>
                            <input id="actualizaracademia" type="button" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                            <a asp-controller="AcademicosCoordinadores" asp-action="Index" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                             </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>
