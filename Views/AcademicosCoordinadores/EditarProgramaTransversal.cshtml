@model SGCFIEE.Models.CoordinadorProgramaTransversal;
@{
    ViewData["Title"] = "EditarProgramaTransversal";
    Layout = "~/Views/Home/Principal.cshtml";
    var acad = (IEnumerable<Academicos>)ViewData["academicos"];
    var perio = (IEnumerable<TipoPeriodo>)ViewData["periodos"];
    var programa = (IEnumerable<ProgramasTrasversales>)ViewData["programas"];
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>COORDINADOR DE PROGRAMA TRANSVERSAL</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form asp-controller="AcademicosCoordinadores" asp-action="ActualizarProgramaTransversal" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <input type="hidden" asp-for="IdCoordinadorProgramaTransversal"/>
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    <label>Académico</label>
                                    <select asp-for="IdAcademico" class="form-control">
                                        @foreach (var item in acad)
                                        {
                                            @if (item.IdAcademicos != Model.IdAcademico)
                                            {
                                                <option value="@item.IdAcademicos">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno)</option>
                                            }
                                            else
                                            {
                                                <option selected value="@item.IdAcademicos">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno)</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Programa transversal</label>
                                    <select asp-for="IdPt" class="form-control">
                                        @foreach (var item in programa)
                                        {
                                            @if (item.IdProgramasTrasversales != Model.IdPt)
                                            {
                                                <option value="@item.IdProgramasTrasversales">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                            else
                                            {
                                                <option selected value="@item.IdProgramasTrasversales">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    <label>Periodo de inicio</label>
                                    <select asp-for="IdFechaInicial" class="form-control">
                                        @foreach (var item in perio)
                                        {
                                            @if (item.IdPeriodo != Model.IdFechaInicial)
                                            {
                                                <option value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                            else
                                            {
                                                <option selected value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Periodo de termino </label>
                                    <select asp-for="IdFechaCierre" class="form-control">
                                        @foreach (var item in perio)
                                        {
                                            @if (item.IdPeriodo != Model.IdFechaCierre)
                                            {
                                                <option value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                            else
                                            {
                                                <option selected value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Actualizar evidencia:  @Model.Evidencia</label><br>
                                    <input type="file" class="default" id="archivo" name="file">
                                </div>
                                <br>
                                <button type="submit" class="btn btn-success btn-sm m-b-10" name="Guardar" style="float:right">
                                    Guardar
                                </button>
                                <a asp-controller="AcademicosCoordinadores" asp-action="IndexProgramaTransversal" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>
