@model SGCFIEE.Models.CtProblemas
@{
    ViewData["Title"] = "Crear Problema";
    Layout = "~/Views/Home/Principal.cshtml";

}

<!DOCTYPE html>

<html>
<div class="profile-content">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-topline-green"></div>
                <div class="white-box">
                    <!-- Nav tabs -->
                    <div class="p-rl-20">
                        <ul class="nav customtab nav-tabs" role="tablist">
                            <li class="nav-item"><a href="#tab1" class="nav-link active show" data-toggle="tab">Buzon de sugerencias: Problema nuevo</a></li>
                        </ul>
                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fontawesome-demo active show" id="tab1">
                            <form asp-action="CrearProblema" asp-antiforgery="true">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="card-head" id="idDatosPersonales">
                                            <header>Problemas Buzon</header>
                                        </div>
                                        <div class="card-body " id="bar-parent2">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6">
                                                    <div class="form-group">
                                                        <label asp-for="NombreProblemas">Nombre de la problematica</label>
                                                        <input asp-for="NombreProblemas" type="text" class="form-control" placeholder="Nombre del problema">
                                                        <span asp-validation-for="NombreProblemas" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a asp-controller="EstudiantesBuzon" asp-action="Index" class="btn btn-default btn-sm m-b-10">
                                    Cancelar
                                </a>
                                <input type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
