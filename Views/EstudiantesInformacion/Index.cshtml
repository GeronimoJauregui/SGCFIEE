@model IEnumerable<SGCFIEE.Models.TablaAlumno>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/Principal.cshtml";
}
    <script src="~/assets/js/pages/table/table_data.js"></script>
<link rel="stylesheet" href="~/assets/plugins/sweet-alert/sweetalert.min.css">
<script src="~/assets/plugins/sweet-alert/sweetalert.min.js"></script>
<script src="~/assets/js/pages/sweet-alert/sweet-alert-data.js"></script>
<!DOCTYPE html>

<html>
<div class="row">
    @if (TempData["msg"] != null)
    {
        @Html.Raw(TempData["msg"])
    }
    <div id="Reporte" class="col-md-12">
        <div class="card card-topline-green">
            <div class="card-head">
                <header>INFORMACIÓN</header>
                <div class="tools">
                    <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                    <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                </div>
            </div>
            <div class="card-body " id="tablap">
                <div class="row p-b-20">
                    <div class="col-md-12 col-sm-12 col-12">
                        <div class="btn-group">
                            <a asp-controller="EstudiantesInformacion" asp-action="Crear" class="btn btn-success btn-sm m-b-10">
                                Agregar <i class="fa fa-plus" style="color:white"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example1">
                        <thead>
                            <tr>
                                <th hidden></th>
                                <th class="center"> Nombre    </th>
                                <th class="center"> A. Paterno </th>
                                <th class="center"> A. Materno </th>
                                <th class="center"> Matricula</th>
                                <th class="center"> Carrera </th>
                                <th style="display: none"></th>
                                <th style="display: none"></th>
                                <th class="center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr class="odd gradeX">
                                    <td hidden></td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.ApellidoPaterno)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.ApellidoMaterno)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.Matricula)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.NombrePro)</td>
                                    <td style="display: none">iddpersonales</td>
                                    <td style="display: none">idalumno</td>

                                    <td class="center">
                                        <a asp-route-id="@item.id" asp-controller="EstudiantesInformacion" asp-action="Detalles" class="btn btn-success btn-xs infoextra" title="Toda la información">
                                            <i class="fa fa-check"></i>
                                        </a>
                                        <a data-value="@item.id" data-controlador="EstudiantesInformacion" data-accion="Eliminar" name="laeliminacion" class="btn btn-danger btn-xs eliminar" title="Eliminar">
                                            <i class="fa fa-trash-o "></i>
                                        </a>
                                        <a data-controlador="EstudiantesInformacion" data-accion="Index" hidden name="actualizar">
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</html>
