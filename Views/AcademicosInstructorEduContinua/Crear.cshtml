@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>INSTRUCTOR DE EDUCACIÓN CONTINUA</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <div class="row">
                        <div class="col-md-6 col-md-6">
                            <div class="form-group">
                                <label>Académico</label>
                                <select id="academico" class="form-control">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group" >
                                <label>Periodo</label>
                                <select id="periodo" class="form-control" >
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-md-6">
                            <div class="form-group">
                                <label>Nombre del ingreso</label>
                                <input id="nomingreso" type="text" class="form-control" placeholder="Ingresar...">
                            </div>
                            <div class="form-group">
                                <label>Cantidad de ingreso</label>
                                <input id="ingreso" type="number" class="form-control" placeholder="Ingresar...">
                            </div>
                            <br>
                            <input id="guardarIEC" type="button" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                            <a asp-controller="AcademicosInstructorEduContinua" asp-action="Index" class="btn btn-default btn-sm m-b-10" style="float:right">
                            Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>
