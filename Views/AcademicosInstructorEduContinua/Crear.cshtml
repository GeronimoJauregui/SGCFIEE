@model SGCFIEE.Models.RecursosExternos;
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Home/Principal.cshtml";
    var acad = (IEnumerable<Academicos>)ViewData["academicos"];
    var perio = (IEnumerable<TipoPeriodo>)ViewData["periodos"];
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>INSTRUCTOR DE EDUCACIÓN CONTINUA</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form asp-action="GuardarInstructorEdu" asp-antiforgery="true">
                        <div class="row">
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    <label>Académico</label>
                                    <select asp-for="IdAcademicos" class="form-control">
                                        @foreach (var item in acad){
                                            <option value="@item.IdAcademicos">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.ApellidoPaterno) @Html.DisplayFor(modelItem => item.ApellidoMaterno)</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group" >
                                    <label>Periodo</label>
                                    <select asp-for="IdPeriodo" class="form-control">
                                        @foreach (var item in perio){
                                            <option value="@item.IdPeriodo">@Html.DisplayFor(modelItem => item.Nombre)</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    <label>Nombre del ingreso</label>
                                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresar..." required="required">
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Cantidad de ingreso</label>
                                     <input asp-for="Ingreso" type="number" class="form-control" placeholder="Ingresar..." required="required">
                                    <span asp-validation-for="Ingreso" class="text-danger"></span>
                                </div>
                                <br>
                                <button type="submit" class="btn btn-success btn-sm m-b-10" name="Guardar" style="float:right">
                                    Guardar
                                </button>
                                <a asp-controller="AcademicosInstructorEduContinua" asp-action="Index" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>
