@{
    ViewData["Title"] = "CrearPartRedisenio";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>PARTICIPACIÓN ACTIVA EN EL REDISEÑO O ACTUALIZACIÓN DEL PLAN DE ESTUDIOS</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form asp-controller="AcademicosComisiones" asp-action="GuardarPartRedisenio" method="post" enctype="multipart/form-data"> 
                        <div class="row">
                            <div class="col-md-6 col-md-6">

                                <div class="form-group">
                                    <label>Académico</label>
                                    <select id="academicos" class="form-control" name="id_academico">
                                            <option></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Área académica</label>
                                    <input id="comision" type="text" class="form-control" placeholder="Ingresar...">
                                </div>
                                <div class="form-group">
                                    <label>Entidad académica</label>
                                    <input id="meta" type="text" class="form-control" placeholder="Ingresar...">
                                </div>
                            </div>
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    <label>Programa educativo</label>
                                    <input id="accion" type="text" class="form-control" placeholder="Ingresar...">
                                </div>
                                <div class="form-group">
                                    <label>Tipo de participación</label>
                                    <input id="fecha" type="text" class="form-control" placeholder="Ingresar...">
                                </div>
                                <div class="form-group">
                                    <label>Evidencia:</label><br>
                                    <input type="file" class="default" id="archivo" name="Archivo">
                                </div>
                                <br>
                                <input id="guardarMaterial" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                                <a asp-controller="AcademicosComisiones" asp-action="IndexPartRedisenio" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>
