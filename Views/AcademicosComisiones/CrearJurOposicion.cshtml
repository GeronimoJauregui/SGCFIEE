@{
    ViewData["Title"] = "CrearJurOposicion";
    Layout = "~/Views/Home/Principal.cshtml";
}
<!DOCTYPE html>

<html>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-topline-green card-head">
                    <header>JURADO DE EXAMEN DE OPOSICIÓN</header>        
                </div>
                <div class="card-body " id="bar-parent2">
                    <form asp-controller="AcademicosComisiones" asp-action="GuardarJurOposicion" method="post" enctype="multipart/form-data"> 
                        <div class="row">
                            <div class="col-md-6 col-md-6">

                                <div class="form-group">
                                    <label>Académico</label>
                                    <select id="academicos" class="form-control" name="id_academico">
                                            <option></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Título de examen</label>
                                    <input id="titulo" type="text" class="form-control" placeholder="Ingresar...">
                                </div>
                                
                            </div>
                            <div class="col-md-6 col-md-6">
                                <div class="form-group">
                                    <label>Nombre de la EE o PE</label>
                                    <input id="EE_PE" type="text" class="form-control" placeholder="Ingresar...">
                                </div>
                                <div class="form-group">
                                    <label>Fecha</label>
                                    <input id="fecha" type="date" class="form-control" placeholder="Ingresar...">
                                </div>
                                <div class="form-group">
                                    <label>Evidencia:</label><br>
                                    <input type="file" class="default" id="archivo" name="Archivo">
                                </div>
                                <br>
                                <input id="guardarMaterial" type="submit" value="Guardar" class="btn btn-success btn-sm m-b-10" style="float:right">
                                <a asp-controller="AcademicosComisiones" asp-action="IndexJurOposicion" class="btn btn-default btn-sm m-b-10" style="float:right">
                                Cancelar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</html>
